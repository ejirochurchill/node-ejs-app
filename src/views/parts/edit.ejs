<form action="/parts/edit/<%= part.id %>" method="POST">
    <h1>Edit Part</h1>
    <div>
        <label for="partName">Part Name:</label>
        <input type="text" id="partName" name="partName" value="<%= part.partName %>" required>
    </div>
    <div>
        <label for="partNumber">Part Number:</label>
        <input type="text" id="partNumber" name="partNumber" value="<%= part.partNumber %>" required>
    </div>
    <div>
        <label for="purchaseInfo">Purchase Information:</label>
        <textarea id="purchaseInfo" name="purchaseInfo" required><%= part.purchaseInfo %></textarea>
    </div>
    <div>
        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="<%= part.price %>" required>
    </div>
    <button type="submit">Update Part</button>
</form>
<a href="/parts/list">Back to Parts List</a>